@model IEnumerable<FullstackCodingChallengeFinal.Models.EmployeeModel>

@{ ViewData["Title"] = "Index"; }

<h1>Employees</h1>

<p>
    <a asp-action="Create">Hire new Employee</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Person.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Person.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Salary)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmployeeId)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
